#!/bin/sh

printf "^C2^ "

vol=$(pamixer --get-volume-human | tr -d '%')

if [ "$vol" = "muted" ] || [ "$vol" -eq 0 ]; then
    printf "ğŸ”‡"
elif [ "$vol" -gt 66 ]; then
    printf "ğŸ”Š%3s%%" "$vol"
elif [ "$vol" -gt 33 ]; then
    printf "ğŸ”‰%3s%%" "$vol"
else
    printf "ğŸ”ˆ%3s%%" "$vol"
fi

printf " ^d^\n"
