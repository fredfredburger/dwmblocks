#!/bin/sh

printf "^C2^["

vol=$(pamixer --get-volume-human | tr -d '%')

if [ "$vol" = "muted" ] || [ "$vol" -eq 0 ]; then
    printf "ğŸ”‡"
elif [ "$vol" -gt 66 ]; then
    printf "ğŸ”Š%s%%" "$vol"
elif [ "$vol" -gt 33 ]; then
    printf "ğŸ”‰%s%%" "$vol"
else
    printf "ğŸ”ˆ%s%%" "$vol"
fi

printf "]^d^\n"
