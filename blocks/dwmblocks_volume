#!/bin/sh

printf "^C0^^B2^" # Set fg/bg color.

vol=$(pamixer --get-volume-human | tr -d '%')

if [ "$vol" = "muted" ] || [ "$vol" -eq 0 ]; then
    printf "ğŸ”‡\n"
elif [ "$vol" -gt 66 ]; then
    printf "ğŸ”Š%s%%\n" "$vol"
elif [ "$vol" -gt 33 ]; then
    printf "ğŸ”‰%s%%\n" "$vol"
else
    printf "ğŸ”ˆ%s%%\n" "$vol"
fi
